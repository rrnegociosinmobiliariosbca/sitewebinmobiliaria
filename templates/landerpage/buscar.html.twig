{% extends '/landerpage/index.html.twig' %}

{% block title %}RR NEGOCIOS INMOBILIARIOS
{% endblock %}

{% block contenidolander %}

	<style>

		@font-face {
			font-family: 'Comfortaa';
			src: url('/img/Comfortaa-Regular.ttf') format('truetype');
		}

		.font-confortan {
			font-family: 'Confortaa', sans-serif;
			font-weight: 400; /* Peso normal */
			font-style: normal;
			font-size: 1.2em; /* Tamaño de fuente */
			letter-spacing: 0.1em;
			line-height: 1.5;
			text-align: center;
			margin: 0 auto;
			padding: 20px;
			background-color: rgba(255, 255, 255, 0.8); /* Fondo semi-transparente */
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.13);
			max-width: 600px; /* Ancho máximo para el texto */
			color: #333; /* Color del texto */
			transition: transform 0.3s ease, background-color 0.3s ease;


		}
		.font-confortan:hover {
			transform: scale(1.05); /* Efecto de zoom al pasar el mouse */
			background-color: rgba(255, 255, 255, 1); /* Fondo opaco al pasar el mouse */
		}
	</style>
	<!-- Contenido principal -->
	<div class="content-wrapper">
		<div class="row align-items-center justify-content-center  m-5">
			<div class="col-12 text-center">
				<p class="text-uppercase">
					Estas a un paso de
				</p>
				<p class="text-uppercase fw-bold">
					¡una vivienda a tu alcance!
				</p>
			</div>
			<section class="gallery-section-fix col-sm-5">
				<div class="font-confortan">
					<a href="{{ path("app_buscar_ventas") }}" class="text-decoration-none">
						Ventas
					</a>
				</div>
			</section>
			<section class="gallery-section-fix col-sm-5">
				<div class="font-confortan">
					<a href="{{ path("app_buscar_arrendo") }}" class=" text-decoration-none">
						Arriendos
					</a>
				</div>
			</section>
			{% if app.user %}
				<section class="gallery-section-fix col-sm-5">
					<div class="container text-center">
						<h2 class="text-uppercase">
							<a href="{{ path("app_dashboard") }}" class=" text-decoration-none fw-bold">
								agregar inmueble
							</a>
						</h2>
					</div>
				</section>
			{% endif %}
		</div>
	{% endblock %}
